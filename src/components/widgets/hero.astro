---
import { Image } from 'astro:assets';
import ProfileImage from "@/assets/prof.png";
import {Icon} from "astro-icon/components";
interface SocialItem{
  name:string;
  url : string
}
const socials: SocialItem[] = [
    {
        name: 'github',
        url: 'https://github.com/anishshobithps'
    },
    { 
        name: 'instagram',
        url: 'https://instagram.com/anishshobithps'
    },
    {
         name: 'twitter',
         url: 'https://x.com/anishshobithps'
    },
    {
        name: 'linkedin',
        url: 'https://linkedin.com/in/anishshobithps'
    }
];
---

<section class="text-white-600 body-font">
    <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
      <div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
        <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-white-900">Hello, I am Apoorva 
          <br class="hidden lg:inline-block">Welcome to my site!
        </h1>
        <p class="mb-8 leading-relaxed">Good to see you here.</p>
          <div class="flex gap-3">
            {
               socials.map((item) => (
                <a href={item.url}>
                 <Icon name={`mdi:${item.name}`} class="size-10 mb-4" />
                 <span class="sr-only">{item.name}</span>
               </a>
               ))
            }
           </div>
        <div class="flex justify-center">
          <button class="inline-flex text-black bg-purple-400 border-0 py-2 px-4 focus:outline-none hover:bg-pink-500 rounded text-lg">Explore</button>
          <button class="ml-4 inline-flex text-black bg-purple-200 border-0 py-2 px-6 focus:outline-none hover:bg-pink-500 rounded text-lg">Button</button>
        </div>
      </div>
      <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
        <Image src={ProfileImage} alt="hero" class="object-cover object-center rounded" />
    </div>
    </div>
  </section>
  